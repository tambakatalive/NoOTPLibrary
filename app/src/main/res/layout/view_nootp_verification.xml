<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/call_to_verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_call_to_verify"
        android:textSize="12sp"
        app:icon="@drawable/baseline_call_24"
        app:iconGravity="textStart"
        app:cornerRadius="4dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/powered_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="@string/title_powered_by"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/powered_by_nootp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="@string/title_nootp"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
